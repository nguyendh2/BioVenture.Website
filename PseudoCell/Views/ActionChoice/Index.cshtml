@model PseudoCell.Models.ActionChoiceListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new{scenarioId=Model.ScenarioId})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActionChoices[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionChoices[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionChoices[0].NextScenarioName)
        </th>
        <th></th>
    </tr>

@if (Model.ActionChoices != null)
{
    foreach (var item in Model.ActionChoices)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextScenarioName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {actionChoiceId = item.Id}) |
                @Html.ActionLink("Details", "Details", new { actionChoiceId = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new { actionChoiceId = item.Id})
            </td>
        </tr>
    }
}
</table>
