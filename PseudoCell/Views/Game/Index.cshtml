@model IEnumerable<PseudoCell.Models.Game>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Games</h2>

<p>
    @Html.ActionLink("Create", "Create", "Game")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        
        <td>
            @Html.ActionLink("Play","Play",new{gameId = item.Id})|
            @Html.ActionLink("Edit", "Edit", new {gameId = item.Id}) |
            @Html.ActionLink("Details", "Details", new {gameId = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {gameId = item.Id})
        </td>
    </tr>
}

</table>
