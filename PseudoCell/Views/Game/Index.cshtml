@model PseudoCell.Models.GameListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Games</h2>

<p>
    @if (Model.IsManager)
    {
        @Html.ActionLink("Create", "Create", "Game", new { @class = "btn btn-primary" })
        @Html.ActionLink("Grade", "GameResultIndex", "Game", new { @class = "btn btn-primary" })
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Games[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games[0].CreatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Games) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        
        <td>
            @Html.ActionLink("Play", "Play", new { gameId = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink("Details", "Details", new {gameId = item.Id}, new { @class = "btn btn-default" }) 
            @if (Model.IsManager)
            {
                @Html.ActionLink("Edit", "Edit", new { gameId = item.Id }, new { @class = "btn btn-default" })

            }
            @if (Model.IsManager)
            {
                @Html.ActionLink("Delete", "Delete", new {gameId = item.Id}, new { @class = "btn btn-danger" })
            }

        </td>
    </tr>
}

</table>
