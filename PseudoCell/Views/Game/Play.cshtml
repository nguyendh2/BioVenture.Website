@model PseudoCell.Models.PlayScenarioViewModel

@{
    ViewBag.Title = "Play";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Play</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActionChoices[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionChoices[0].Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ActionChoices) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Select", "Select", new { id=item.Id })
        </td>
    </tr>
}

</table>
